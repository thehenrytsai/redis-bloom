{
    "tasks": {
      "build": "deno run --allow-all build/build-node.ts",
      "test": "deno test --coverage=coverage/ --allow-all --env-file=.env.test && deno coverage coverage/",
      "coverage-html": "deno coverage coverage/ --html"
    },
    "imports": {
      "@std/assert": "jsr:@std/assert@1"
    },
    "fmt": {
      "options": {
        "lineWidth": 150
      }
    }
  }
  